          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <PasswordField fx:id="textFieldPassword" />
            <Button mnemonicParsing="false" onAction="#onButtonPasswordViewCancelButtonPressed" text="Cancel" />
            <Button mnemonicParsing="false" onAction="#onButtonJoinLobbyButtonPressed" text="Join Lobby" />
            <Label prefHeight="15.0" prefWidth="135.0" text="Enter Lobby Password:" />
            <Label fx:id="LabelPasswordView" text="Join Lobby XYZ" />
            <Label fx:id="errorMessagePasswordIncorrect" text="Incorrect Password!" visible="false" />
            <Label fx:id="errorMessageLobbyFull" text="Lobby is already full!" visible="false" />
         </children>
      </GridPane>
   </children>
